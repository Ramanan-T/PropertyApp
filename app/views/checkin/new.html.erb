<html>
<%if renter_signed_in? %>
<%= render "layouts/navbar"%>
<% @property = Property.find(params[:property_id]) %>
<h2>Request checkin for <i><%= @property.property_name %></i></h2>
<br>


<div class="card" style="display:inline-block;margin-left:150px;padding:30px">
<%= form_for @checkin  do |form| %>
  
  <br>
  <div>
    <%= form.label :serial_code %><br>
    <%= form.text_field :serial_code %>

    <p class="alert"><%= alert %></p>
  </div>

 

  <%= hidden_field_tag :property_id, params[:property_id] %>
  
  
    <%= form.submit "Request Checkin" , class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Back', properties_path, class: "btn btn-danger btn-sm" %> 

<% end %>
</div>
<br>
<br>



